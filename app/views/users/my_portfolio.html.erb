<h1>My Portfolio</h1>

<div class="pt-5">
    <h3> Search stocks </h3>
    <%= form_tag search_stock_path, remote: true, method: :get, class: "form-inline" do %>
        <div class="form-group d-flex justify-content-center align-items-center">
            <div class="col-sm-9">
                <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker", class: "form-control form-control-lg", autofocus: true %>
            </div>
            <div class="col-sm-3">
                <%= button_tag type: :submit, class: "btn btn-success" do %>
                    <%= fa_icon "search 2x" %>
                <% end %>
            </div>
        </div>
    <% end %>
</div>
<%= render 'users/result' %>
<%= render 'stocks/list', obj: @tracked_stocks %>